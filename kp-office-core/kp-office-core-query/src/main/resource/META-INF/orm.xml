<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.store</package>


    <entity class="de.kaiserpfalzEdv.office.tenants.Tenant$TenantDTO">
        <description>The tenants for the multitenant system.</description>

        <table name="TENANTS"/>

        <attributes>
            <id name="id">
                <column name="ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="displayNumber">
                <column name="CODE_" length="50" nullable="false" updatable="false" unique="true"/>
            </basic>

            <basic name="displayName">
                <column name="DISPLAY_" length="200" nullable="false" unique="true"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
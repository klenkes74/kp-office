<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        ">
    <changeSet id="kpo-security-inititial" author="klenkes74">
        <comment>The initial user tables.</comment>


        <createTable tableName="identities">
            <column name="id_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="identities_pk"/>
            </column>

            <column name="tenant_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="display_name_" type="VARCHAR2(100)"/>

            <column name="display_number_" type="VARCHAR2(100)"/>

            <column name="hidden_" type="BOOLEAN"/>
        </createTable>


        <createTable tableName="accounts">
            <column name="dtype" type="VARCHAR2(20)">
                <constraints nullable="false"/>
            </column>

            <column name="id_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="accounts_PK"/>
            </column>
            <column name="tenant_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="display_name_" type="VARCHAR2(100)">
                <constraints unique="true" uniqueConstraintName="accounts_name_uk"/>
            </column>

            <column name="display_number_" type="VARCHAR2(100)">
                <constraints unique="true" uniqueConstraintName="accounts_number_uk"/>
            </column>

            <column name="hidden_" type="BOOLEAN"/>

            <column name="identity_" type="VARCHAR2(50)">
                <constraints nullable="false" deleteCascade="true"
                             foreignKeyName="accounts_identities_fk" references="identities(id_)"/>
            </column>

            <column name="password_" type="VARCHAR2(100)">
                <constraints nullable="false"/>
            </column>
            <column name="salt_" type="VARCHAR2(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="roles">
            <column name="dtype" type="VARCHAR2(20)">
                <constraints nullable="false"/>
            </column>

            <column name="id_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="roles_pk"/>
            </column>
            <column name="tenant_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="display_name_" type="VARCHAR2(100)"/>

            <column name="display_number_" type="VARCHAR2(100)"/>

            <column name="hidden_" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="accounts_roles">
            <column name="account_id_" type="VARCHAR2(50)">
                <constraints nullable="false" deleteCascade="true"
                             foreignKeyName="accounts_roles_accounts_fk" references="accounts(id_)"/>
            </column>
            <column name="role_id_" type="VARCHAR2(50)">
                <constraints nullable="false" deleteCascade="true"
                             foreignKeyName="accounts_roles_roles_fk" references="roles(id_)"/>
            </column>
        </createTable>


        <createTable tableName="tickets">
            <column name="id_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="TICKETS_USER_PK"/>
            </column>
            <column name="account_id_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_" type="VARCHAR2(39)"/>
            <column name="validity_" type="VARCHAR2(39)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createIndex tableName="identities" indexName="identities_tenant_number_uk" unique="true">
            <column name="tenant_"/>
            <column name="display_number_"/>
        </createIndex>
        <createIndex tableName="identities" indexName="identities_tenant_name_uk" unique="true">
            <column name="tenant_"/>
            <column name="display_name_"/>
        </createIndex>

        <createIndex tableName="roles" indexName="roles_tenant_number_uk" unique="true">
            <column name="tenant_"/>
            <column name="display_number_"/>
        </createIndex>
        <createIndex tableName="roles" indexName="roles_tenant_name_uk" unique="true">
            <column name="tenant_"/>
            <column name="display_name_"/>
        </createIndex>
    </changeSet>


    <changeSet id="kpo-security-load-initial" author="klenkes74">
        <comment>Load default tenant.</comment>

        <loadData tableName="identities" file="data/IDENTITIES-initial.csv"/>
        <loadData tableName="accounts" file="data/ACCOUNTS-initial.csv"/>
        <loadData tableName="roles" file="data/ROLES-initial.csv"/>
        <loadData tableName="accounts_roles" file="data/ACCOUNTS_ROLES-initial.csv"/>
    </changeSet>


    <changeSet id="kpo-security-tag-initial" author="klenkes74">
        <tagDatabase tag="kpo-security-initialized"/>
    </changeSet>
</databaseChangeLog>

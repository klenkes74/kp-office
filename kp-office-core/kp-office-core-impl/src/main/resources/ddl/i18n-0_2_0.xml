<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        ">
    <changeSet id="kpo-i18n-store-inititial" author="klenkes74">
        <comment>The I18N translation table.</comment>

        <createTable tableName="I18N_TRANSLATIONS_">
            <column name="KEY_" type="VARCHAR2(100)">
                <constraints nullable="false"/>
            </column>
            <column name="LANGUAGE_" type="VARCHAR2(3)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE_" type="VARCHAR2(2000)"/>
        </createTable>

        <addPrimaryKey
                tableName="I18N_TRANSLATIONS_"
                columnNames="KEY_,LANGUAGE_"
                constraintName="I18N_TRANSLATIONS_PK"/>
    </changeSet>

    <changeSet id="kpo-i18n-tag-initial" author="klenkes74">
        <tagDatabase tag="kpo-tenant-initial"/>
    </changeSet>

    <changeSet id="kpo-i18n-load-initial" author="klenkes74">
        <comment>Load default translations.</comment>

        <loadData tableName="I18N_TRANSLATIONS_" file="data/I18N-initial.csv"/>
    </changeSet>

    <changeSet id="kpo-i18n-tag-initial-data" author="klenkes74">
        <tagDatabase tag="kpo-tenant-data-loaded"/>
    </changeSet>
</databaseChangeLog>

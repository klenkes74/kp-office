<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        ">
    <changeSet id="kpo-tenant-store-inititial" author="klenkes74">
        <comment>The initial tenant table.</comment>

        <createTable tableName="tenants">
            <column name="id_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="tenant_pk"/>
            </column>

            <column name="display_name_" type="VARCHAR2(100)">
                <constraints unique="true" uniqueConstraintName="tenant_name_uk"/>
            </column>

            <column name="display_number_" type="VARCHAR2(100)">
                <constraints unique="true" uniqueConstraintName="tenant_number_uk"/>
            </column>

            <column name="hidden_" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="kpo-tenant-load-initial" author="klenkes74">
        <comment>Load default tenant.</comment>

        <loadData tableName="tenants" file="data/TENANTS-initial.csv"/>
    </changeSet>

    <changeSet id="kpo-tenant-tag-initial" author="klenkes74">
        <tagDatabase tag="kpo-tenant-initialized"/>
    </changeSet>
</databaseChangeLog>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        ">
    <changeSet id="kpo-financialaccounting-store-inititial" author="klenkes74">
        <comment>The accounting tables.</comment>

        <createTable tableName="FA_ACCOUNTS">
            <column name="ID_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="FA_ACCOUNTS_PK"/>
            </column>
            <column name="TENANT_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="DISPLAY_NAME_" type="VARCHAR2(100)"/>
            <column name="DISPLAY_NUMBER_" type="VARCHAR2(100)"/>
            <column name="HIDDEN_" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="FA_ACCOUNT_MAPPING">
            <column name="ID_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="FA_ACCOUNT_MAPPING_PK"/>
            </column>
            <column name="TENANT_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="DISPLAY_NAME_" type="VARCHAR2(100)"/>
            <column name="DISPLAY_NUMBER_" type="VARCHAR2(100)"/>
            <column name="HIDDEN_" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="FA_ACCOUNT_MAPPING_RULE">
            <column name="ID_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="FA_ACC_MAPPING_PK"/>
            </column>

            <column name="MAPPING_RULESET_" type="VARCHAR2(50)"/>
            <column name="ACCOUNT_" type="VARCHAR2(50)">
                <constraints foreignKeyName="FA_ACC_MAP_RULE_ACCOUNT_FK" references="FA_ACCOUNTS(ID_)"/>
            </column>
            <column name="NUMBER_" type="VARCHAR2(200)"/>
        </createTable>

        <createTable tableName="FA_PRIMANOTA">
            <column name="ID_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="FA_PRIMANOTA_PK"/>
            </column>
            <column name="TENANT_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="DISPLAY_NUMBER_" type="VARCHAR2(100)"/>
            <column name="DISPLAY_NAME_" type="VARCHAR2(100)"/>
            <column name="HIDDEN_" type="BOOLEAN" />
        </createTable>

        <createTable tableName="FA_PRIMANOTA_ENTRIES">
            <column name="ID_" type="VARCHAR2(50)">
                <constraints primaryKey="true" primaryKeyName="FA_PRIMANOTA_ENTRY_PK"/>
            </column>
            <column name="TENANT_" type="VARCHAR2(50)">
                <constraints nullable="false"/>
            </column>

            <column name="DISPLAY_NUMBER_" type="VARCHAR2(100)"/>
            <column name="DISPLAY_NAME_" type="VARCHAR2(100)"/>
            <column name="HIDDEN_" type="BOOLEAN"/>
        </createTable>


        <createIndex tableName="FA_ACCOUNTS" indexName="FA_ACCOUNTS_NAME_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NAME_"/>
        </createIndex>

        <createIndex tableName="FA_ACCOUNTS" indexName="FA_ACCOUNTS_NUMBER_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NUMBER_"/>
        </createIndex>

        <createIndex tableName="FA_ACCOUNT_MAPPING" indexName="FA_ACC_MAP_NAME_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NAME"/>
        </createIndex>

        <createIndex tableName="FA_ACCOUNT_MAPPING" indexName="FA_ACC_MAP_NUMBER_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NUMBER"/>
        </createIndex>

        <createIndex tableName="FA_ACCOUNT_MAPPING_RULE" indexName="FA_ACC_MAP_RULE_UK" unique="true">
            <column name="MAPPING_RULESET_"/>
            <column name="ACCOUNT_"/>
            <column name="NUMBER_"/>
        </createIndex>

        <createIndex tableName="FA_PRIMANOTA" indexName="FA_PRIMANOTA_NAME_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NAME_"/>
        </createIndex>

        <createIndex tableName="FA_PRIMANOTA" indexName="FA_PRIMANOTA_NUMBER_UK" unique="true">
            <column name="TENANT_"/>
            <column name="DISPLAY_NUMBER_"/>
        </createIndex>
    </changeSet>


    <changeSet id="kpo-financialaccounting-tag-initial" author="klenkes74">
        <tagDatabase tag="kpo-financialaccounting-initial"/>
    </changeSet>

    <changeSet id="kpo-financialaccounting-load-initial" author="klenkes74">
        <comment>Load default chart of account and mappings.</comment>

        <loadData tableName="FA_ACCOUNTS" file="data/FA_ACCOUNTS-initial.csv"/>
        <loadData tableName="FA_ACCOUNT_MAPPING_RULESET" file="data/FA_ACC_MAP_RULESET-initial.csv"/>
        <loadData tableName="FA_ACCOUNTS" file="data/FA_ACC_MAP_RULES-initial.csv"/>
    </changeSet>

    <changeSet id="kpo-financialaccounting-tag-initial-data" author="klenkes74">
        <tagDatabase tag="kpo-financialaccounting-data-loaded"/>
    </changeSet>
</databaseChangeLog>

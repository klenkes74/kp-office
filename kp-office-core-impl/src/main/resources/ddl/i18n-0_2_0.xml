<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        ">
    <changeSet id="kpo-i18n-store-inititial" author="klenkes74">
        <comment>The I18N translation table.</comment>

        <createTable tableName="i18n_translations">
            <column name="key_" type="VARCHAR2(100)">
                <constraints nullable="false"/>
            </column>
            <column name="language_" type="VARCHAR2(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="LONGTEXT"/>
        </createTable>

        <addPrimaryKey
                tableName="i18n_translations"
                columnNames="key_,language_"
                constraintName="i18n_translations_pk"/>
    </changeSet>

    <changeSet id="kpo-i18n-load-initial" author="klenkes74">
        <comment>Load default translations.</comment>

        <loadData tableName="i18n_translations" file="data/I18N-initial.csv"/>
    </changeSet>

    <changeSet id="kpo-i18n-tag-initial" author="klenkes74">
        <tagDatabase tag="kpo-i18n-initialized"/>
    </changeSet>
</databaseChangeLog>

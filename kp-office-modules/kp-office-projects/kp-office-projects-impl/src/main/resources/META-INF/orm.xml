<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.tenants.store</package>

    <mapped-superclass class="de.kaiserpfalzEdv.office.commands.OfficeCommand" access="FIELD">
        <description>Generic tenant command.</description>

        <attributes>
            <id name="commandId">
                <column name="COMMAND_ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="commandTimestamp">
                <column name="TIMESTAMP_COMMAND_" nullable="false" updatable="false"/>
            </basic>

            <basic name="handledTimestamp">
                <column name="TIMESTAMP_HANDLING_" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <entity class="de.kaiserpfalzEdv.office.tenants.commands.TenantStoreCommand" access="FIELD">
        <table name="TENANTS"/>
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-value>BASE</discriminator-value>
        <discriminator-column name="COMMAND_" discriminator-type="STRING" length="10"/>

        <attributes>
            <basic name="tenantId">
                <column name="TENANT_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.tenants.commands.CreateTenantCommand" access="FIELD">
        <discriminator-value>CREATE</discriminator-value>

        <attributes>
            <basic name="displayNumber">
                <column name="CODE_" length="50" nullable="false" updatable="false"/>
            </basic>
            <basic name="displayName">
                <column name="DISPLAY_" length="200" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.tenants.commands.RenumberTenantCommand" access="FIELD">
        <discriminator-value>RENUMBER</discriminator-value>

        <attributes>
            <basic name="displayNumber">
                <column name="CODE_" length="50" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.tenants.commands.RenameTenantCommand" access="FIELD">
        <discriminator-value>RENAME</discriminator-value>

        <attributes>
            <basic name="displayName">
                <column name="DISPLAY_" length="200" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.tenants.commands.DeleteTenantCommand" access="FIELD">
        <discriminator-value>DELETE</discriminator-value>
    </entity>
</entity-mappings>

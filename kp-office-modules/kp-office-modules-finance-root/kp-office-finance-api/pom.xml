<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.kaiserpfalz-edv.office</groupId>
        <artifactId>kp-office-parent-api</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../../kp-office-parents-root/kp-office-parent-api/pom.xml</relativePath>
    </parent>

    <artifactId>kp-office-finance-api</artifactId>
    <description>The public API to the accounting feature of the KP Office system.</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolixName>${project.artifactId}</Bundle-SymbolixName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package>
                            de.kaiserpfalzedv.office.finance.accounting.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.accounting.client.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.datevexport.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.datevexport.client.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.reporting.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.reporting.client.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.taxexport.de.*;version=${project.version}
                            de.kaiserpfalzedv.office.finance.taxexport.de.client.*;version=${project.version}
                        </Export-Package>
                        <Import-Package>
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-base-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>


        <dependency>
            <groupId>javax.money</groupId>
            <artifactId>money-api</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
</project>

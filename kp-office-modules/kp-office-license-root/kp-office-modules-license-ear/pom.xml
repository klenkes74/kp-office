<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.kaiserpfalz-edv.office</groupId>
        <artifactId>kp-office-parent-ear</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../../kp-office-parents-root/kp-office-parent-ear/pom.xml</relativePath>
    </parent>

    <artifactId>kp-office-license-ear</artifactId>
    <name>KP Office :: Modules :: License :: Application</name>
    <packaging>ear</packaging>

    <description>
        License management server for KP Office.
    </description>

    <properties>
        <application-name>licenses</application-name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-commons-ejb</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-modules-license-impl</artifactId>
            <classifier>ejb</classifier>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-modules-license-ui</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <applicationName>${application-name}</applicationName>
                    <displayName>${project.name}</displayName>
                    <description>${project.description}</description>

                    <version>7</version>
                    <defaultLibBundleDir>/lib</defaultLibBundleDir>
                    <filtering>true</filtering>
                    <skinnyWars>true</skinnyWars>

                    <modules>
                        <webModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>kp-office-modules-license-ui</artifactId>
                            <contextRoot>/licenses</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

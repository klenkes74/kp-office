<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.contacts.commands.contact</package>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.commands.contact.ContactBaseCommand" access="FIELD">
        <attributes>
            <basic name="contactId">
                <column name="CONTACT_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.commands.contact.UpdateContactCommand" access="FIELD"/>


    <entity class="de.kaiserpfalzEdv.office.contacts.commands.contact.CreateContactCommand" access="FIELD">
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-column name="TYPE_" discriminator-type="STRING" length="10"/>
        <discriminator-value>BASE</discriminator-value>

        <attributes>
            <id name="id">
                <column name="ID_" length="50" nullable="false" unique="true"/>
            </id>
            <basic name="contactId">
                <column name="CONTACT_ID_" length="50" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="DISPLAY_NAME_" length="200" nullable="false"/>
            </basic>
            <basic name="number">
                <column name="DISPLAY_NUMBER_" length="200" nullable="false"/>
            </basic>

            <one-to-many name="addresses" access="PROPERTY" fetch="EAGER" optional="true">
                <join-column name="CREATE_COMMAND_ID_" nullable="true"/>
                <cascade/>
            </one-to-many>
            <one-to-many name="contacts" access="PROPERTY" fetch="EAGER" optional="true">
                <join-column name="CREATE_COMMAND_ID_" nullable="true"/>
                <cascade/>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv"

    <embeddable class="de.kaiserpfalzEdv.office.contacts.commands.contact.PersonalContactData" access="FIELD">
        <attributes>
            <basic name="id">
                <column name="CONTACT_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
            <basic name="displayName">
                <column name="DISPLAY_NAME_" length="100" nullable="false"/>
            </basic>
            <basic name="displayNumber">
                <column name="DISPLAY_NUMBER_" length="100" nullable="false"/>
            </basic>
            <embedded name="name"/>
        </attributes>
    </embeddable>

    <embeddable class="de.kaiserpfalzEdv.office.contacts.commands.contact.CompanyContactData" access="FIELD">

    </embeddable>
</entity-mappings>

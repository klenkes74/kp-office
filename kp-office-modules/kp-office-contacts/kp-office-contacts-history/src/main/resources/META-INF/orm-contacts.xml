<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.contacts.contact</package>

    <entity class="de.kaiserpfalzEdv.office.contacts.contact.ContactDTO" access="PROPERTY">
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-value>BASE</discriminator-value>
        <discriminator-column name="TYPE_" length="10"/>

        <attributes>
            <basic name="type">
                <column name="CONTACT_TYPE_" nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>

            <many-to-many name="addresses" access="PROPERTY">
                <join-table name="CONTACT_ADDRESS">
                    <join-column name="CONTACT_" nullable="false"/>
                    <inverse-join-column name="ADDRESS_" nullable="false"/>
                </join-table>
                <cascade/>
            </many-to-many>
            <many-to-many name="subContacts" access="PROPERTY">
                <join-table name="CONTACT_CONTACT">
                    <join-column name="CONTACT_A_" nullable="false"/>
                    <inverse-join-column name="CONTACT_B_" nullable="false"/>
                </join-table>
                <cascade/>
            </many-to-many>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.contact.ContactPersonDTO" access="FIELD">
        <discriminator-value>PERSON</discriminator-value>

        <attributes>
            <embedded name="name" access="PROPERTY"/>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.contact.CompanyContactDTO" access="FIELD">
        <discriminator-value>COMPANY</discriminator-value>

        <attributes>
            <embedded name="name" access="PROPERTY"/>
        </attributes>
    </entity>


    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.PersonalName" access="FIELD">
        <attributes>
            <basic name="firstName">
                <column name="FIRST_NAME_" length="100" nullable="true"/>
            </basic>
            <basic name="middleName">
                <column name="MIDDLE_NAME_" length="100" nullable="true"/>
            </basic>
            <basic name="lastName">
                <column name="LAST_NAME_" length="100" nullable="false"/>
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.CompanyName" access="FIELD">
        <attributes>
            <basic name="fullName">
                <column name="COMPANY_NAME_" length="200" nullable="false"/>
            </basic>
        </attributes>
    </embeddable>
</entity-mappings>

<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.contacts.store</package>

    <mapped-superclass class="de.kaiserpfalzEdv.office.core.KPOEntityDTO" access="FIELD">
        <attributes>
            <id name="id">
                <column name="ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="displayName">
                <column name="NAME_" length="100" nullable="false" updatable="true" unique="false"/>
            </basic>
            <basic name="displayNumber">
                <column name="NUMBER_" length="100" nullable="false" updatable="true" unique="false"/>
            </basic>

            <basic name="hidden">
                <column name="HIDDEN_"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.core.KPOTenantHoldingEntityDTO" access="FIELD">
        <attributes>
            <basic name="tenantId">
                <column name="TENANT_" length="50" nullable="false" updatable="false" unique="false"/>
            </basic>
        </attributes>
    </mapped-superclass>


    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.contact.ContactDTO" access="FIELD">
        <attributes>
            <basic name="type">
                <enumerated>STRING</enumerated>
            </basic>

            <one-to-many name="addresses" access="PROPERTY"/>
            <one-to-many name="subContacts" access="PROPERTY"/>
        </attributes>
    </mapped-superclass>


    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.address.AddressDTO" access="FIELD">
        <attributes>
            <basic name="type">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="usage">
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.address.postal.PostalAddressDTO" access="FIELD">
        <attributes>
            <embedded name="city" access="PROPERTY"/>
        </attributes>
    </mapped-superclass>


    <mapped-superclass class="de.kaiserpfalzEdv.office.commands.OfficeCommand" access="FIELD">
        <description>Generic tenant command.</description>

        <attributes>
            <id name="id">
                <column name="COMMAND_ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="commandTimestamp">
                <column name="TIMESTAMP_COMMAND_" nullable="false" updatable="false"/>
            </basic>

            <basic name="handledTimestamp">
                <column name="TIMESTAMP_HANDLING_" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.commands.contact.ContactBaseCommand" access="FIELD">
        <attributes>
            <basic name="contactId">
                <column name="CONTACT_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.commands.contact.UpdateContactCommand" access="FIELD"/>

    <mapped-superclass class="de.kaiserpfalzEdv.office.contacts.contact.ContactDTO" access="FIELD">
        <attributes>
            <basic name="type">
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </mapped-superclass>


    <entity class="de.kaiserpfalzEdv.office.contacts.commands.contact.CreateContactCommand" access="FIELD">
        <attributes>
            <embedded name="contact"/>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.commands.contact.DeleteContactCommand" access="FIELD"/>

    <entity class="de.kaiserpfalzEdv.office.contacts.address.phone.AreaCode" access="FIELD"/>


    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.ContactPersonDTO" access="FIELD">
        <attributes>
            <embedded name="name" access="PROPERTY"/>
        </attributes>
    </embeddable>

    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.PersonalName" access="FIELD">
        <attributes>
            <basic name="firstName">
                <column name="FIRST_NAME_" length="100" nullable="true"/>
            </basic>

            <basic name="middleName">
                <column name="MIDDLE_NAME_" length="100" nullable="true"/>
            </basic>

            <basic name="lastName">
                <column name="LAST_NAME_" length="100" nullable="false"/>
            </basic>
        </attributes>
    </embeddable>


    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.CompanyContactDTO" access="FIELD">
        <attributes>
            <embedded name="name" access="PROPERTY"/>
        </attributes>
    </embeddable>

    <embeddable class="de.kaiserpfalzEdv.office.contacts.contact.CompanyName" access="FIELD">
        <attributes>
            <basic name="fullName">
                <column name="NAME_" length="200" nullable="false"/>
            </basic>
        </attributes>
    </embeddable>


    <embeddable class="de.kaiserpfalzEdv.office.contacts.location.CityDTO" access="PROPERTY">
        <attributes>
            <one-to-many name="areaCodes"/>
            <one-to-one name="postCode"/>
        </attributes>
    </embeddable>
</entity-mappings>

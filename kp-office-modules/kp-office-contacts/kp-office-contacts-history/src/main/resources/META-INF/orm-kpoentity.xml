<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.core</package>

    <mapped-superclass class="de.kaiserpfalzEdv.office.core.KPOEntityDTO" access="FIELD">
        <attributes>
            <id name="id">
                <column name="ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="displayName">
                <column name="NAME_" length="100" nullable="false" updatable="true" unique="false"/>
            </basic>
            <basic name="displayNumber">
                <column name="NUMBER_" length="100" nullable="false" updatable="true" unique="false"/>
            </basic>

            <basic name="hidden">
                <column name="HIDDEN_"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.core.KPOTenantHoldingEntityDTO" access="FIELD">
        <attributes>
            <basic name="tenantId">
                <column name="TENANT_" length="50" nullable="false" updatable="false" unique="false"/>
            </basic>
        </attributes>
    </mapped-superclass>


    <mapped-superclass class="de.kaiserpfalzEdv.office.commands.OfficeCommand" access="FIELD">
        <description>Generic command.</description>

        <attributes>
            <id name="id">
                <column name="ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="commandTimestamp">
                <column name="TIMESTAMP_COMMAND_" nullable="false" updatable="false"/>
            </basic>

            <basic name="handledTimestamp">
                <column name="TIMESTAMP_HANDLING_" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </mapped-superclass>

    <mapped-superclass class="de.kaiserpfalzEdv.office.notifications.OfficeNotification" access="FIELD">
        <description>Generic notification.</description>

        <attributes>
            <id name="notificationId">
                <column name="ID_" length="50" nullable="false" updatable="false" unique="true"/>
            </id>

            <basic name="commandId">
                <column name="COMMAND_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
            <basic name="notificationTimestamp">
                <temporal>TIMESTAMP</temporal>
            </basic>
        </attributes>
    </mapped-superclass>
</entity-mappings>

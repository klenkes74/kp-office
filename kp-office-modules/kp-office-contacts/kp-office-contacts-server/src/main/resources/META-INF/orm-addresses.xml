<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.contacts.address</package>

    <entity class="de.kaiserpfalzEdv.office.contacts.address.AddressDTO" access="FIELD">
        <inheritance strategy="TABLE_PER_CLASS"/>
        <table name="ADDRESS"/>

        <attributes>
            <basic name="type">
                <column name="ADDRESS_TYPE_" length="20" nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="usage">
                <column name="ADDRESS_USAGE_" length="20" nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.address.postal.PostalAddressDTO" access="FIELD">
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-value>BASE</discriminator-value>
        <discriminator-column name="TYPE_" length="10"/>
        <table name="POSTAL_ADDRESS"/>

        <attributes>
            <many-to-one name="city">
                <join-column name="CITY_"/>
                <cascade/>
            </many-to-one>
            <many-to-one name="postCode">
                <join-column name="POST_CODE_"/>
                <cascade/>
            </many-to-one>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.address.postal.StreetAddressDTO" access="FIELD">
        <discriminator-value>STREET</discriminator-value>

        <attributes>
            <basic name="street">
                <column name="STREET_" length="100" nullable="false"/>
            </basic>
            <basic name="houseNumber">
                <column name="HOUSE_NUMBER_" length="5"/>
            </basic>
            <basic name="houseNumberAdd">
                <column name="HOUSE_NUMBER_ADD_" length="5"/>
            </basic>
            <basic name="co">
                <column name="CONTACT_OVER_" length="100"/>
            </basic>

            <one-to-many name="city">
                <join-column name="CITY_"/>
                <cascade/>
            </one-to-many>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.address.postal.PostboxAddressDTO" access="FIELD">
        <attributes>
            <basic name="postboxId">
                <column name="POST_BOX_ID_" length="50" nullable="false"/>
            </basic>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.address.postal.PostCodeDTO" access="FIELD">
        <table name="POST_CODE"/>
        <attributes>
            <many-to-one name="country">
                <join-column name="COUNTRY_"/>
                <cascade/>
            </many-to-one>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.address.phone.AreaCodeDTO" access="PROPERTY">
        <table name="AREA_CODE"/>
        <attributes>
            <embedded name="countryCode"/>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.address.phone.PhoneNumberDTO" access="PROPERTY">
        <table name="PHONE_NUMBER"/>
        <attributes>
            <basic name="kind">
                <column name="PHONE_KIND_" length="20" nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <many-to-one name="areaCode">
                <join-column name="AREA_CODE_"/>
                <cascade/>
            </many-to-one>
            <embedded name="subscriberNumber">
                <attribute-override name="number">
                    <column name="SUBSCRIBER_NUMBER_"/>
                </attribute-override>
            </embedded>
            <embedded name="extension">
                <attribute-override name="number">
                    <column name="EXTENSION_"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>


    <entity class="de.kaiserpfalzEdv.office.contacts.location.CountryDTO" access="FIELD">
        <table name="COUNTRY"/>
        <attributes>
            <basic name="iso2">
                <column name="ISO_2_" length="2" nullable="false" unique="true"/>
            </basic>
            <basic name="iso3">
                <column name="ISO_3_" length="3" nullable="false" unique="true"/>
            </basic>
            <basic name="phoneCountryCode">
                <column name="PHONE_CODE_" length="5" nullable="false"/>
            </basic>
            <basic name="postalPrefix">
                <column name="POST_CODE_" length="5" nullable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.location.CityDTO" access="PROPERTY">
        <table name="CITY"/>
        <attributes>
            <many-to-one name="country">
                <join-column name="COUNTRY_"/>
                <cascade/>
            </many-to-one>
            <one-to-many name="areaCodes">
                <
                <join-column name="CITY_"/>
                <cascade/>
            </one-to-many>
            <one-to-many name="postCodes">
                <join-column name="CITY_"/>
                <cascade/>
            </one-to-many>
        </attributes>
    </entity>


    <embeddable class="de.kaiserpfalzEdv.office.contacts.address.phone.NumberPartDTO" access="FIELD">
        <attributes>
            <basic name="number">
                <column name="NUMBER_" length="20"/>
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="de.kaiserpfalzEdv.office.contacts.address.phone.CountryCodeDTO" access="FIELD">
        <attributes>
            <many-to-one name="country">
                <join-column name="COUNTRY_"/>
                <cascade/>
            </many-to-one>
        </attributes>
    </embeddable>
</entity-mappings>

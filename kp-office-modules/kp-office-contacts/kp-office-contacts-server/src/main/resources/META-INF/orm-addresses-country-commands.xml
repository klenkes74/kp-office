<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <schema>${db.schema}</schema>
            <access>FIELD</access>
            <cascade-persist/>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>de.kaiserpfalzEdv.office.contacts.commands.country</package>

    <entity class="de.kaiserpfalzEdv.office.contacts.commands.country.CountryBaseCommand" access="FIELD">
        <inheritance strategy="SINGLE_TABLE"/>
        <discriminator-value>BASE</discriminator-value>
        <discriminator-column name="COMMAND_TYPE_" length="10"/>

        <attributes>
            <basic name="countryId">
                <column name="COUNTRY_ID_" length="50" nullable="false" updatable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.commands.country.CreateCountryCommand" access="FIELD">
        <discriminator-value>CREATE</discriminator-value>

        <attributes>
            <one-to-one name="country" fetch="EAGER" orphan-removal="true">
                <join-column name="COUNTRY_"/>
                <cascade/>
            </one-to-one>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.commands.country.UpdateCountryCommand" access="FIELD">
        <discriminator-value>UPDATE</discriminator-value>

        <attributes>
            <one-to-one name="country" fetch="EAGER" orphan-removal="true">
                <join-column name="COUNTRY_"/>
                <cascade/>
            </one-to-one>
        </attributes>
    </entity>

    <entity class="de.kaiserpfalzEdv.office.contacts.commands.country.DeleteCountryCommand" access="FIELD">
        <discriminator-value>DELETE</discriminator-value>
    </entity>
</entity-mappings>

<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
      http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <entity name="Tenant"
            class="de.kaiserpfalzedv.office.tenant.impl.TenantImpl"
            cacheable="true"
            access="FIELD">
        <table name="TENANTS"/>

        <attributes>
            <id name="id">
                <column name="ID_" nullable="false" unique="true" updatable="false"/>
            </id>
            <basic name="tenant">
                <column name="TENANT_" nullable="false"/>
            </basic>

            <basic name="fullName">
                <column name="FULL_NAME_" nullable="false" length="1000"/>
            </basic>
            <basic name="displayName">
                <column name="DISPLAY_NAME_" nullable="false" length="200"/>
            </basic>
        </attributes>


    </entity>
</entity-mappings>
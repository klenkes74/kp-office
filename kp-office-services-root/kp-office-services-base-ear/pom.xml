<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.kaiserpfalz-edv.office</groupId>
        <artifactId>kp-office-services-root</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>kp-office-services-base-ear</artifactId>
    <packaging>ear</packaging>

    <name>KP Office :: Services :: Base Application</name>
    <description>Base modules of the KP Office. Contains all modules needed for any function.</description>


    <properties>
        <application.name>kpo-base</application.name>
    </properties>


    <dependencies>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-services-metainfo-ui</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-services-tenant-ui</artifactId>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-base-metainfo</artifactId>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-base-monitoring</artifactId>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-base-access</artifactId>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>de.kaiserpfalz-edv.office</groupId>
            <artifactId>kp-office-base-tenant</artifactId>
            <type>ejb</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>

                <configuration>
                    <modules>
                        <webModule>
                            <groupId>de.kaiserpfalz-edv.office</groupId>
                            <artifactId>kp-office-services-tenant-ui</artifactId>
                            <contextRoot>/tenant</contextRoot>
                        </webModule>

                        <webModule>
                            <groupId>de.kaiserpfalz-edv.office</groupId>
                            <artifactId>kp-office-services-metainfo-ui</artifactId>
                            <contextRoot>/settings</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

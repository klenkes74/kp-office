<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.kaiserpfalz-edv.office</groupId>
        <artifactId>kp-office-webui-root</artifactId>
        <version>0.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>kp-office-webui-production</artifactId>
    <packaging>war</packaging>

    <properties>
        <vaadin.resource.directory>${project.build.directory}/${project.build.finalName}</vaadin.resource.directory>
    </properties>

    <dependencies>
        <!--
            Include the WAR-module as an overlay.
          -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-webui-ui</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <!--
            Also include the compiled classes as a provided dependency so that the GWT compiler can pick up
            all the GWT modules.
          -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-webui-ui</artifactId>
            <version>${project.version}</version>
            <classifier>classes</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kp-office-webui-widgetset</artifactId>
            <version>${project.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>production</id>
            <build>
                <plugins>
                    <!-- Unpack the theme and widgetset to (re)compile them for production mode -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.9</version>
                        <executions>
                            <execution>
                                <id>unpack</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>kp-office-webui-ui</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                            <includes>VAADIN/themes/**/*</includes>
                                            <!-- If there already is a compiled theme, we want to recompile it -->
                                            <excludes>VAADIN/themes/**/styles.css</excludes>
                                            <outputDirectory>${vaadin.resource.directory}</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>piracc-widgetset</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <includes>de/kaiserpfalzedv/office/**</includes>
                                            <!-- Vaadin/GWT plug-in expects .gwt.xml to be in its warSourceDirectory -->
                                            <outputDirectory>${vaadin.resource.directory}/WEB-INF/classes
                                            </outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                    <overWriteIfNewer>true</overWriteIfNewer>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>net.alchim31.maven</groupId>
                        <artifactId>yuicompressor-maven-plugin</artifactId>
                        <version>1.5.1</version>
                        <configuration>
                            <nosuffix>true</nosuffix>
                            <warSourceDirectory>${vaadin.resource.directory}</warSourceDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compress</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.vaadin</groupId>
                        <artifactId>vaadin-maven-plugin</artifactId>
                        <configuration>
                            <module>de.kaiserpfalzedv.office.OfficeWidgetset</module>
                            <extraJvmArgs>-Xmx512M -Xss1024k</extraJvmArgs>
                            <warSourceDirectory>${vaadin.resource.directory}</warSourceDirectory>
                            <webappDirectory>${vaadin.resource.directory}/VAADIN/widgetsets</webappDirectory>
                            <draftCompile>false</draftCompile>
                            <compileReport>false</compileReport>
                            <style>OBF</style>
                            <strict>true</strict>
                            <theme>mytheme</theme>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>compile-theme</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default-war</id>
                                <phase>package</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <overlays>
                                <overlay>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>kp-office-webui-ui</artifactId>
                                    <excludes>
                                        <!-- Exclude larger development time widgetset. -->
                                        <!-- The relevant classes are copied to the WAR above. -->
                                        <exclude>WEB-INF/lib/kp-office-webui-widgetset-*.jar</exclude>
                                        <!-- Exclude the Sass compiler and its dependencies. -->
                                        <!-- The production WAR includes a precompiled theme. -->
                                        <exclude>WEB-INF/lib/vaadin-sass-compiler-*.jar</exclude>
                                        <exclude>WEB-INF/lib/sac-*.jar</exclude>
                                        <exclude>WEB-INF/lib/flute-*.jar</exclude>
                                    </excludes>
                                </overlay>
                            </overlays>
                            <!-- Exclude some unnecessary files generated by the GWT compiler. -->
                            <packagingExcludes>VAADIN/gwt-unitCache/**,VAADIN/widgetsets/WEB-INF/**</packagingExcludes>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>default-install</id>
                                <phase>install</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <!--
                        The Jetty plugin allows us to easily test the production build by running jetty:run on the command line.
                      -->
                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>${jetty.plugin.version}</version>
                        <configuration>
                            <stopKey>abcd</stopKey>
                            <stopPort>8892</stopPort>
                            <jettyConfig>
                                <baseResource>${vaadin.resource.directory}</baseResource>
                            </jettyConfig>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- Do not produce and install artifacts when not using the production profile -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-war</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>default-install</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>

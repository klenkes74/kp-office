    <version>0.1.0</version>

    <name>KP Office - Parent</name>
    <description>Kaiserpfalz EDV-Service Office - A central office management suite.</description>
    <url>https://devzone.kaiserpfalz-edv.de/kp-office/</url>


    <modules>
        <module>kp-office-commons</module>
        <module>kp-office-backend</module>
        <module>kp-office-interfaces</module>
        <!--
        <module>kp-office-modules</module>
        -->
    </modules>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>

        <project.root>${project.basedir}</project.root>

        <skipTests>false</skipTests>
        <skipUnitTests>${skipTests}</skipUnitTests>
        <skipIntegrationTests>${skipTests}</skipIntegrationTests>
        <skipAcceptanceTests>${skipTests}</skipAcceptanceTests>
        <jeeTestEnvironment>wildfly-managed</jeeTestEnvironment>
        <setupDatabase>${skipTests}</setupDatabase>
        <dontSign>true</dontSign>

        <jboss.installation>/opt/servers/jboss-as-7.1.1.Final</jboss.installation>

        <database.changelog>
            ${project.root}/kp-office-modules/kp-office-store/target/classes/ddl/db-changelog.xml
        </database.changelog>

        <h2.port>9070</h2.port>
        <jdbc.dataSourceType>javax.sql.DataSource</jdbc.dataSourceType>
        <jdbc.url>jdbc:mysql://192.168.59.103:49162/kpoffice?profileSQL=true&amp;connectTimeout=6000&amp;socketTimeout=4000&amp;autoReconnect=true</jdbc.url>
        <jdbc.file>jdbc:jdbc:./target/data/testdb;DB_CLOSE_ON_EXIT=TRUE</jdbc.file>
        <jdbc.driver>com.mysql.jdbc.Driver</jdbc.driver>
        <jdbc.user>kpoffice</jdbc.user>
        <jdbc.password>kptest</jdbc.password>

        <db.schema>KPOSTORE</db.schema>

        <config.path>./config</config.path>

        <kp-commons.version>2015Q1</kp-commons.version>
        <shiro.version>1.2.3</shiro.version>
    </properties>

    <distributionManagement>
        <repository>
            <id>internal</id>
            <url>https://devzone.kaiserpfalz-edv.de/ci/plugin/repository/everything/</url>
        </repository>
        <snapshotRepository>
            <id>snapshot</id>
            <url>https://devzone.kaiserpfalz-edv.de/ci/plugin/repository/everything/</url>
        </snapshotRepository>
        <site>
            <id>kp-website</id>
            <url>file://home/docu/kp-office/${project.version}</url>
        </site>
    </distributionManagement>

    <issueManagement>
        <system>jira</system>
        <url>https://devzone.kaiserpfalz-edv.de/issues/BROWSE/KPO</url>
    </issueManagement>

    <scm>
        <url>http://github.com/KaiserpfalzEdv/kp-office</url>
        <connection>scm:git:git://github.com/KaiserpfalzEdv/kp-office.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/KaiserpfalzEdv/kp-office.git</developerConnection>
        <tag>HEAD</tag>
    </scm>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>

            <!-- ===[Testing]=============================================================================[BEGIN]=== -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
            <!-- ===[Testing]=============================================================================[END  ]=== -->
        </plugins>
    </build>

    <inceptionYear>2014</inceptionYear>


